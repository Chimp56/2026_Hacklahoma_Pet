# App
APP_NAME=Pet API
DEBUG=false
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL with asyncpg only; use postgresql+asyncpg:// so SQLAlchemy never uses psycopg2)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pet_db

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI: Gemini (https://aistudio.google.com/apikey). On rate limit, rotates to GEMINI_API_KEY2, then GEMINI_API_KEY3.
GEMINI_API_KEY=
# Optional: extra keys for rotation when rate limited
# GEMINI_API_KEY2=
# GEMINI_API_KEY3=
GEMINI_MODEL=gemini-2.5-flash-lite

# AI: Llama (text-only; Transformers pipeline, local)
HF_TOKEN=
HF_LLAMA_MODEL=meta-llama/Llama-3.2-1B-Instruct
# Llama Vision (image analysis alternative to Gemini; accept license at the model page)
HF_LLAMA_VISION_MODEL=meta-llama/Llama-3.2-11B-Vision-Instruct

# File storage: local | digitalocean
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./storage
# DigitalOcean Spaces (S3-compatible)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Notifications: Slack (incoming webhook)
SLACK_WEBHOOK_URL=
SLACK_DEFAULT_CHANNEL=
# Comma-separated events that trigger Slack: milestone, health_alert, anomaly
NOTIFICATION_FLAG_EVENTS=milestone,health_alert,anomaly

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
